generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Boards {
  id      String @id @default(cuid())
  title   String
  category String
  author  String?
  cards   Cards[]
  createdAt DateTime @default(now())
}

model Cards {
  id      String @id @default(cuid())
  title  String
  message String
  gif     String
  upvotes Int @default(0)
  board Boards @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId String
}
